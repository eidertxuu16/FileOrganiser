{
  "manifest_version": 3,
  "name": "Download Organizer",
  "description": "Automatically organize your downloads into folders.",
  "version": "1.0",
  "permissions": ["downloads", "storage", "tabs"],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "popup.html"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"]
    }
  ]
}